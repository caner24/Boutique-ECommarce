@{
    Layout = "_LoginLayout";
}
@model ResetPasswordViewModel


<form asp-action="ResetPassword" asp-controller="Account" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-header">
        <h3>Şifre Sifirla</h3>
        <img src="images/sign-up.png" alt="" class="sign-up-icon">
    </div>
    <div class="form-group">
        <label for="">E-mail:</label>
        <input  asp-for="Email" type="text" class="form-control" data-validation="email">
    </div>
    <div class="form-group">
        <label for="">Password:</label>
        <input asp-for="Password" type="password" class="form-control" data-validation="length" data-validation-length="min8">
    </div>
    <div class="form-group">
        <input hidden asp-for="Token" type="text" class="form-control" >
    </div>
    <div class="form-group">
        <label for="">RePassword:</label>
        <input asp-for="ConfirmPassword" type="password" class="form-control" data-validation="length" data-validation-length="min8">
    </div>
    <button>Sıfırla</button>
</form>