@section Scripts
    {

    <script>

        document.querySelector(".active").classList.remove("active");
        document.getElementById("main").classList.add("active");

        var expands = document.getElementsByClassName("expands");

        for (var i = 0; i < expands.length; i++) {
            expands[i].addEventListener("click", function (e) {
                var parentElement = e.target.parentElement.parentElement.parentElement.parentElement.parentElement;
                var name = parentElement.querySelector(".reset-anchor")?.innerText;
                var productId = parentElement.querySelector(".prod-name")?.innerText;
                var price = parentElement.querySelector(".small.text-muted")?.innerText;
                var image = parentElement.querySelector(".img-fluid.w-100")?.src;


                document.querySelector("#productId").value = productId;
                document.querySelector("#item_price").innerText = price;
                document.querySelector("#expanded_product_name").innerText = name;
                document.querySelector("#product_picture").style = `background: url(${image})`;

                console.log(name);
            });
        }
    </script>

}