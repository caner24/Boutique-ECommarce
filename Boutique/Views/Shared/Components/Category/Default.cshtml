@model List<Category>


<section class="pt-5">
    <header class="text-center">
        <h2 class="h5 text-uppercase mb-4">Kategorilerimize göz atın</h2>
    </header>
    <div class="row">

        @for (int i = 0; i < Model.Count(); i++)
        {

            if (i == 1 )
            {
                <div class="col-md-4">
                    <a class="category-item mb-4" asp-controller="Home" asp-action="Products" asp-route-categories="@Model[i].CategoryName"><img class="img-fluid" src="img/cat-img-2.jpg" alt="" /><strong class="category-item-title">@Model[i].CategoryName</strong></a><a class="category-item" asp-action="Products" asp-controller="Home" asp-route-categories="@Model[i+1].CategoryName"><img class="img-fluid" src="img/cat-img-3.jpg" alt="" /><strong class="category-item-title">@Model[i+1].CategoryName</strong></a>
                </div>
            }
            else
            {
                if (i == 2)
                {
                    
                }
                else
                {
                    <div class="col-md-4">
                        <a class="category-item" asp-controller="Home" asp-action="Products" asp-route-categories="@Model[i].CategoryName"><img class="img-fluid" src="img/cat-img-1.jpg" alt="" /><strong class="category-item-title">@Model[i].CategoryName</strong></a>
                    </div>
                }
             
            }


        }

    </div>
</section>